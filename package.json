{
  "name": "markquote",
  "version": "1.1.0",
  "description": "Copy webpage selections as Markdown quotes with reference source link.",
  "private": true,
  "type": "module",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloLION/MarkQuote.git"
  },
  "homepage": "https://github.com/PabloLION/MarkQuote",
  "bugs": {
    "url": "https://github.com/PabloLION/MarkQuote/issues"
  },
  "keywords": [
    "chrome-extension",
    "clipboard",
    "markdown",
    "quote"
  ],
  "scripts": {
    "bmad:list": "bmad-method list:agents",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:validate": "bmad-method validate",
    "build": "vite build",
    "build:e2e": "VITE_E2E=true vite build",
    "bundle": "tsx scripts/package/bundle.ts",
    "check": "biome check --write --unsafe",
    "dev:browser": "tsx scripts/package/dev/browser.ts",
    "dev:playwright": "tsx scripts/package/dev/playwright-dev.ts",
    "dev": "vite",
    "prepare": "husky",
    "publish:chrome": "tsx scripts/package/publish/chrome-web-store.ts",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "playwright test",
    "sanity:chrome-clipboard": "tsx scripts/sanity/chrome-clipboard.ts",
    "test:unit": "vitest --run --coverage",
    "test:unit:watch": "vitest --watch",
    "tool:gen-icons": "svg2png assets/icon.svg --width=16 --height=16 --output=public/icons/icon-16.png && svg2png assets/icon.svg --width=32 --height=32 --output=public/icons/icon-32.png && svg2png assets/icon.svg --width=48 --height=48 --output=public/icons/icon-48.png && svg2png assets/icon.svg --width=128 --height=128 --output=public/icons/icon-128.png",
    "tools:chrome-assets:options": "tsx scripts/package/tools/chrome-assets/options.ts",
    "tools:chrome-assets:overview": "tsx scripts/package/tools/chrome-assets/overview.ts",
    "tools:chrome-assets:promo-marquee": "tsx scripts/package/tools/chrome-assets/promo-marquee.ts",
    "tools:chrome-assets:promo-small": "tsx scripts/package/tools/chrome-assets/promo-small.ts",
    "tools:chrome-assets": "tsx scripts/package/capture-store-assets.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm biome check --write --log-level error"
    ],
    "*.md": [
      "pnpm exec markdownlint"
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "author": "Pablo LION",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.5.2",
    "@types/safe-regex": "^1.0.3",
    "@types/sinon-chrome": "^2.2.16",
    "@types/turndown": "^5.0.5",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "clipboardy": "^5.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.3",
    "markdownlint-cli": "^0.45.0",
    "playwright": "^1.55.0",
    "sinon-chrome": "^3.0.1",
    "svg2png": "^4.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "safe-regex": "^2.1.1",
    "turndown": "^7.2.1"
  }
}
