{
  "name": "markquote",
  "version": "1.0.0",
  "description": "Turn webpage selections into Markdown quotes you can paste anywhere.",
  "private": true,
  "type": "module",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/PabloLION/MarkQuote.git"
  },
  "homepage": "https://github.com/PabloLION/MarkQuote",
  "bugs": {
    "url": "https://github.com/PabloLION/MarkQuote/issues"
  },
  "keywords": [
    "chrome-extension",
    "clipboard",
    "markdown",
    "quote"
  ],
  "scripts": {
    "build": "vite build",
    "check": "biome check --write --unsafe",
    "dev": "vite",
    "dev:playwright": "tsx scripts/package/dev/playwright-dev.ts",
    "bundle": "tsx scripts/package/bundle.ts",
    "tools:chrome-web-store-capture": "tsx scripts/package/capture-store-assets.ts",
    "tools:chrome-web-store-capture:options": "tsx scripts/package/tools/chrome-web-store-capture/runOptions.ts",
    "tools:chrome-web-store-capture:overview": "tsx scripts/package/tools/chrome-web-store-capture/runOverview.ts",
    "tools:chrome-web-store-capture:promo-small": "tsx scripts/package/tools/chrome-web-store-capture/runPromoSmall.ts",
    "tools:chrome-web-store-capture:promo-marquee": "tsx scripts/package/tools/chrome-web-store-capture/runPromoMarquee.ts",
    "prepare": "husky",
    "test": "vitest",
    "test:e2e": "pnpm exec playwright test",
    "tool:gen-icons": "svg2png assets/icon.svg --width=16 --height=16 --output=public/icons/icon-16.png && svg2png assets/icon.svg --width=32 --height=32 --output=public/icons/icon-32.png && svg2png assets/icon.svg --width=48 --height=48 --output=public/icons/icon-48.png && svg2png assets/icon.svg --width=128 --height=128 --output=public/icons/icon-128.png"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm biome check --write --log-level error"
    ]
  },
  "directories": {
    "doc": "docs"
  },
  "author": "Pablo LION",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.55.0",
    "@types/chrome": "^0.1.12",
    "@types/node": "^24.5.2",
    "@types/sinon-chrome": "^2.2.16",
    "@types/turndown": "^5.0.5",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.0",
    "sinon-chrome": "^3.0.1",
    "svg2png": "^4.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vite-plugin-static-copy": "^3.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "turndown": "^7.2.1"
  }
}
