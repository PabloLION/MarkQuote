{
  "manifest_version": 3,
  "name": "MarkQuote",
  "version": "1.0.0",
  "description": "A Chrome extension to copy selected text as markdown with source link.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "offscreen",
    "storage",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Copy as Markdown Quote"
    }
  },
  "icons": {
    "128": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
